{
    "name": "oro/commerce-crm",
    "description": "OroCRM integration for OroCommerce",
    "homepage": "https://github.com/orocommerce/orocommerce-orocrm",
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Oro, Inc",
            "homepage": "https://www.orocommerce.com/"
        }
    ],
    "autoload": {
        "psr-0": {
            "Oro": "src/"
        }
    },
    "require": {
        "oro/crm": "4.1.*",
        "oro/commerce":"4.1.*"
    },
    
    "repositories": [
     {
      "type": "composer",
      "url": "https://packagist.orocrm.com"
    },
     "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.orocrm.com"
        }
    {       
        "type":"package",
        "package": {
          "name": "oro/commerce",
          "version":"4.1-rc",
          "source": {
              "url": "https://github.com/dongphanit/orocommerce.git",
              "type": "git",
              "reference":"4.1-rc"
            }
        }
    }

  ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "4.1-dev"
        }
    }
}
