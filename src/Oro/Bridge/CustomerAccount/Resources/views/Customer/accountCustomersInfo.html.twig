{% if resource_granted('oro_customer_account_view') and customers|length > 0 %}
    <div class="widget-content">
        {% set tabs = [] %}
        {% for customer in customers %}
            {% set tabs = tabs|merge([
            {
                'alias': 'oro_customer_info_customer_' ~ customer.id,
                'widgetType': 'block',
                'label': customer|oro_format_name,
                'url': path('oro_account_customer_widget_customer_info', {'id': customer.id})
            }
            ]) %}
        {% endfor %}
        {{ tabPanel(tabs) }}
    </div>
{% endif %}
